<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome Onboard"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/signup_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/profile_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onProfileImageClick" />

        <TextView
            android:id="@+id/signup_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="24dp"
            android:text="Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_name_label"
            android:background="@drawable/edit_text_rounded"
            android:hint="Enter your name"
            android:padding="12dp" />

        <TextView
            android:id="@+id/signup_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_name"
            android:layout_marginTop="24dp"
            android:text="Email"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_email_label"
            android:background="@drawable/edit_text_rounded"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <TextView
            android:id="@+id/signup_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_email"
            android:layout_marginTop="24dp"
            android:text="Password"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_password_label"
            android:background="@drawable/edit_text_rounded"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <TextView
            android:id="@+id/signup_confirm_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_password"
            android:layout_marginTop="24dp"
            android:text="Confirm Password"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_confirm_password_label"
            android:background="@drawable/edit_text_rounded"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <TextView
            android:id="@+id/signup_category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_confirm_password"
            android:layout_marginTop="24dp"
            android:text="Select Category"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/signup_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_category_label"
            android:background="@drawable/spinner_rounded"
            android:entries="@array/category_array"
            android:minHeight="48dp"
            android:padding="12dp"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_category_spinner"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_rounded2"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>

