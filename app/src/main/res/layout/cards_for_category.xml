<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pancakes"/>

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Recipe Title"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/recipe_image"/>

        <TextView
            android:id="@+id/recipe_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:text="Recipe summary"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/recipe_title"/>

        <TextView
            android:id="@+id/recipe_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:text="Recipe author"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/recipe_summary"/>

        <RatingBar
            android:id="@+id/recipe_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:scaleX=".5"
            android:rating="3.5"
            android:scaleY=".5"
            app:starSize="16dp"
            app:starCount="5"
            app:starEmpty="@drawable/ic_empty_star"
            app:starFilled="@drawable/ic_filled_star"
            app:starHalf="@drawable/ic_half_star"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/recipe_summary"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>